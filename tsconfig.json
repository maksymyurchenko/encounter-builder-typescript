{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDirs": ["src", "stories"],
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "public/*": ["public/*"],
      "pages/*": ["src/pages/*"],
      "store/*": ["src/store/*"],
      "styles": ["src/styles"],
      "styles/*": ["src/styles/*"],
      "config": ["src/config"],
      "shared/*": ["src/shared/*"],
      "react-portal-tooltip": ["src/modules.d.ts"]
    }
  },
  "include": ["./src/**/*"]
}