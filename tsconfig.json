{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": ["src", "stories"],
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "public/*": ["public/*"],
      "styles": ["src/styles"],
      "config": ["src/config"],
      "shared/*": ["src/shared/*"]
    }
  },
  "include": ["./src/**/*"]
}